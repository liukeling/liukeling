<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qinse"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            app:navigationIcon="@mipmap/toolbar_touxiang" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mainfragment_toolbar_button"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_1"
                android:layout_margin="2dp"
                android:layout_width="45dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="30dp"
                android:textColor="@color/qinse"
                android:text="消息"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_toRightOf="@id/tv_1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/qinse"
                android:layout_width="45dp"
                android:text="电话"
                android:textColor="@color/white"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_3"
                android:gravity="center"
                android:background="@color/qinse"
                android:layout_width="100dp"
                android:textColor="@color/white"
                android:layout_margin="0dp"
                android:singleLine="true"
                android:textSize="20dp"
                android:text="heheda"
                android:layout_centerInParent="true"
                android:layout_height="34dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:onClick="popWindow"
            android:src="@mipmap/menu_jia"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/huise"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiob1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:button="@null"
            android:drawablePadding="-20dp"
            android:drawableTop="@drawable/mainfragement_xiaoxi_selector"
            android:gravity="center"
            android:textColor="#aaaaaa" />

        <RadioButton
            android:id="@+id/radiob2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:button="@null"
            android:drawablePadding="-20dp"
            android:drawableTop="@drawable/mainfragment_lianxi_selector"
            android:gravity="center"
            android:textColor="#aaaaaa" />

        <RadioButton
            android:id="@+id/radiob3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:button="@null"
            android:drawablePadding="-20dp"
            android:drawableTop="@drawable/mainfragment_tongtai_selector"
            android:gravity="center"
            android:textColor="#aaaaaa" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radioG"
        android:layout_below="@id/top" />
</RelativeLayout><!-- From: file:/D:/AndroidStudioProjects/heheda/copyqq/src/main/res/layout/mainfragment_layout.xml -->